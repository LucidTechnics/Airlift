<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" version="2.4">   
	<servlet>
		<servlet-name>cabcorder</servlet-name>
		<servlet-class>airlift.servlet.rest.RestServlet</servlet-class>
		<init-param>
			<param-name>a.root.package.name</param-name>
			<param-value>com.cabcorder</param-value>
		</init-param>
		<init-param>
			<param-name>a.namespace</param-name>
			<param-value></param-value>
		</init-param>
		<init-param>
			<param-name>a.production.mode</param-name>
			<param-value>yes</param-value>
		</init-param>
		<init-param>
			<param-name>a.dev.user.security</param-name>
			<param-value>no</param-value>
		</init-param>
		<init-param>
			<param-name>a.session.timeout.duration</param-name>
			<param-value>1200</param-value>
		</init-param>		
		<init-param>
			<param-name>a.report.java.exception</param-name>
			<param-value>no</param-value>
		</init-param>
		<init-param>
			<param-name>a.cipher.password</param-name>
			<param-value>popcorn5relishe$</param-value>
		</init-param>
		<init-param>
			<param-name>a.cipher.initial.vector</param-name>
			<param-value>@fuzzymonkeyw1n5</param-value>
		</init-param>
		<init-param>
			<param-name>a.default.mime.type</param-name>
			<param-value>text/html</param-value>
		</init-param>
		<init-param>
			<param-name>a.auditing.insert</param-name>
			<param-value>on</param-value>
		</init-param>
		<init-param>
			<param-name>a.auditing.get</param-name>
			<param-value>off</param-value>
		</init-param>
		<init-param>
			<param-name>a.auditing.update</param-name>
			<param-value>on</param-value>
		</init-param>
		<init-param>
			<param-name>a.auditing.delete</param-name>
			<param-value>on</param-value>
		</init-param>
		<init-param>
			<param-name>a.extension.xls</param-name>
			<param-value>application/vnd.ms-excel</param-value>
		</init-param>
		<init-param>
			<param-name>a.timezone</param-name>
			<param-value>EST</param-value>
		</init-param>
		<init-param>
			<param-name>a.user.service</param-name>
			<param-value>com.cabcorder.UserService</param-value>
		</init-param>		
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>cabcorder</servlet-name>
		<url-pattern>/a/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>cabcorder</servlet-name>
		<url-pattern>/l/account/*</url-pattern>
	</servlet-mapping>

	<security-constraint>
        <web-resource-collection>
            <url-pattern>/a/confirmationcall</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

	<!-- <security-constraint>
        <web-resource-collection>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint> -->

	<filter>
        <filter-name>appstats</filter-name>
        <filter-class>com.google.appengine.tools.appstats.AppstatsFilter</filter-class>
        <init-param>
            <param-name>logMessage</param-name>
            <param-value>Appstats available: /appstats/details?time={ID}</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>appstats</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

	<servlet>
        <servlet-name>appstats</servlet-name>
        <servlet-class>com.google.appengine.tools.appstats.AppstatsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>appstats</servlet-name>
        <url-pattern>/appstats/*</url-pattern>
    </servlet-mapping>

